<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.spitak.amazinggame"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".activity.ContentActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.GameActivity"
            android:theme="@style/NoBar"
            >
        </activity>
        <activity android:name=".activity.MenuActivity">
        </activity>

        <provider
            android:name=".SomethingSomethingProvider"
            android:authorities="de.spitak.amazinggame.SomethingSomethingProvider"
            />

        <meta-data
            android:name="DATABASE"
            android:value="mauswiesel.db"
            />
        <meta-data
            android:name="VERSION"
            android:value="1.3"
            />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true"
            />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="de.spitak.amazinggame.model"
            />
    </application>

</manifest>