<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.spitak.amazinggame.activity.MenuActivity"
    android:padding="20dp"
    >
    <Button
        android:id="@+id/gameTest"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:onClick="onClickGameStart"
        android:text="@string/button_game_test_start"
        android:theme="@style/MyButton"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:onClick="onClickShowHighscore"
        android:text="@string/button_show_highscore"
        android:theme="@style/MyButton"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:onClick="onClickShowSettings"
        android:text="@string/button_show_settings"
        android:theme="@style/MyButton"
        android:layout_marginBottom="10dp"
        />
